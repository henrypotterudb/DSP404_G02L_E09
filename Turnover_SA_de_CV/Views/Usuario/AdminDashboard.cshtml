<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel de Control de Administrador</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-center">Panel de Control de Administrador</h2>

        <h3 class="mt-4">Gestión de Conciertos</h3>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Lugar</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var concierto in Model.ListaConciertos)
                {
                    <tr>
                        <td>@concierto.Nombre</td>
                        <td>@concierto.FechaConcierto.ToString("dd/MM/yyyy")</td>
                        <td>@concierto.Lugar</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", "Conciertos", new { id = concierto.Id }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Eliminar", "Delete", "Conciertos", new { id = concierto.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <h3 class="mt-4">Gestión de Entradas</h3>
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Concierto</th>
                    <th>Sección</th>
                    <th>Cantidad</th>
                    <th>Total Pagado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entrada in Model.ListaEntradas)
                {
                    <tr>
                        <td>@entrada.Concierto.Nombre</td>
                        <td>@entrada.Seccion</td>
                        <td>@entrada.Cantidad</td>
                        <td>@entrada.TotalPagado.ToString("C")</td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", "Entradas", new { id = entrada.Id }, new { @class = "btn btn-warning btn-sm" }) |
                            @Html.ActionLink("Eliminar", "Delete", "Entradas", new { id = entrada.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

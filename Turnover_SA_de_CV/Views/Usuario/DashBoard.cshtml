<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        @{
            ViewBag.Title = "Dashboard";
        }

        <h2>Bienvenido, @Session["NombreUsuario"]</h2>

        <!-- Sección de Conciertos Disponibles -->
        <h3>Conciertos Disponibles</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha</th>
                    <th>Lugar</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var concierto in Model.ListaConciertos) // Cambié ViewBag.ConciertosDisponibles a Model.ListaConciertos
                {
                    <tr>
                        <td>@concierto.Nombre</td>
                        <td>@concierto.FechaConcierto</td>
                        <td>@concierto.Lugar</td>
                        <td>
                            @Html.ActionLink("Comprar", "Create", "Entradas", new { id = concierto.Id }, null)
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Sección de Historial de Compras -->
        <h3>Historial de Compras</h3>
        @if (Model.HistorialCompras != null && Model.HistorialCompras.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre del Concierto</th>
                        <th>Fecha de Compra</th>
                        <th>Sección</th>
                        <th>Cantidad</th>
                        <th>Lugar</th>
                        <th>Total Pagado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var compra in Model.HistorialCompras)
                    {
                        <tr>
                            <td>@compra.NombreConcierto</td>
                            <td>@compra.FechaCompra.ToString("dd/MM/yyyy")</td> <!-- Formato de fecha -->
                            <td>@compra.TipoEntrada</td> <!-- Cambié Seccion a TipoEntrada -->
                            <td>@compra.Cantidad</td>
                            <td>@compra.Lugar</td>
                            <td>@compra.TotalPagado.ToString("C")</td> <!-- Formato de moneda -->
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No has realizado ninguna compra aún.</p>
        }
    </div>
</body>
</html>

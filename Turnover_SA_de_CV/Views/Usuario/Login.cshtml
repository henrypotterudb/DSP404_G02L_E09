<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        @{
            ViewBag.Title = "Login";
        }

        <h2 class="text-center mb-4 display-4">Login</h2>

        <div class="card-body abs-center">
            <div class="card shadow col-md-12 col-lg-5 p-5 abs-center">
                <!-- Formulario de Login -->
                @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <!-- Correo Electrónico -->
                    <div class="form-group mb-3 text-center">
                        @Html.Label("Correo Electrónico", new { @class = "form-label" })
                        <input type="email" name="correoElectronico" class="form-control" />
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group mb-3 text-center">
                        @Html.Label("Contraseña", new { @class = "form-label" })
                        <input type="password" name="contraseña" class="form-control" />
                    </div>

                    <!-- Botón de Login -->
                    <button type="submit" class="btn btn-primary btn-block mt-4">Iniciar sesión</button>
                }

                <!-- Enlace para registrarse -->
                <div class="mt-3 text-center">
                    @Html.ActionLink("¿No tienes una cuenta? Regístrate", "Registro", "Usuario", new { }, new { @class = "btn btn-link" })
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

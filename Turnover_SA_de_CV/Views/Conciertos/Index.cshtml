@model IEnumerable<Turnover_SA_de_CV.Concierto>

@{
    ViewBag.Title = "Conciertos";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Conciertos</h2>

    <p class="text-right">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped table-bordered table-sm">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FechaConcierto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Lugar)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntradasPlateaDisponibles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioPlatea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntradasVIPDisponibles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioVIP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EntradasGeneralDisponibles)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioGeneral)
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaConcierto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lugar)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntradasPlateaDisponibles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioPlatea)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntradasVIPDisponibles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioVIP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntradasGeneralDisponibles)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioGeneral)
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

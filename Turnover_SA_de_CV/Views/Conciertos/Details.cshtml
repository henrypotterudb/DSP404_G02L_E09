                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PrecioGeneral)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.PrecioGeneral)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |

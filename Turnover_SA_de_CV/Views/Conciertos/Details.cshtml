                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Lugar)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EntradasPlateaDisponibles)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.EntradasPlateaDisponibles)
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PrecioPlatea)

@model Turnover_SA_de_CV.Entrada

@{
    ViewBag.Title = "Editar Entrada";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 display-4">Editar Entrada</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card shadow p-5">
            <h4 class="card-title mb-3">Detalles de la Entrada</h4>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            @Html.HiddenFor(model => model.Id)

            <!-- UsuarioId -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.UsuarioId, "Usuario", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
            </div>

            <!-- ConciertoId -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.ConciertoId, "Concierto", htmlAttributes: new { @class = "form-label" })
                @Html.DropDownList("ConciertoId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ConciertoId, "", new { @class = "text-danger" })
            </div>

            <!-- Sección -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Seccion, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Seccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Seccion, "", new { @class = "text-danger" })
            </div>

            <!-- Cantidad -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
            </div>

            <!-- Fecha de Compra -->
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.FechaCompra, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.FechaCompra, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FechaCompra, "", new { @class = "text-danger" })
            </div>

            <!-- Botón Guardar -->
            <div class="text-center">
                <input type="submit" value="Guardar" class="btn btn-primary btn-lg" />
            </div>
        </div>
    }

    <!-- Botón para volver -->
    <div class="text-center mt-4">
        @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

<!-- Scripts de validación -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
